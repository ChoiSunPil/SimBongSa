<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.company.simbongsa.DetailProgramActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:alpha="0.4"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center" />
    </FrameLayout>

    <TextView
        android:id="@+id/textview_title_DetailProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="봉사제목"
        android:textSize="20sp"/>

    <GridView
        android:id="@+id/gridview_data_DetailProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2">

    </GridView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2">

        <TextView
            android:layout_columnWeight="1"
            android:text="봉사기간"/>
        <TextView
            android:layout_columnWeight="1"
            android:id="@+id/textview_period_DetailProgram"
            android:text="봉사기간"/>
        <TextView
            android:layout_columnWeight="1"
            android:text="봉사시간"/>
        <TextView
            android:layout_columnWeight="1"
            android:id="@+id/textview_time_DetailProgram"
            android:text="봉사시간"/>

        <TextView
            android:layout_columnWeight="1"
            android:text="모집기간"/>
        <TextView
            android:layout_columnWeight="1"
            android:id="@+id/textview_period2_DetailProgram"
            android:text="모집기간"/>
    </GridLayout>

    <TextView
        android:id="@+id/textview_content_DetailProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="봉사내용"/>

    <TextView
        android:id="@+id/textview_admin_DetailProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"/>

    <GridView
        android:id="@+id/gridview_data2_DetailProgram"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="2">

    </GridView>





</LinearLayout>
