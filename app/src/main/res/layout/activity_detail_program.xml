<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.company.simbongsa.DetailProgramActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_title_DetailProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="봉사제목"
        android:textSize="20sp"/>

    <GridView
        android:id="@+id/gridview_data_DetailProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2">

    </GridView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2">

        <TextView
            android:text="봉사기간"/>
        <TextView
            android:id="@+id/textview_period_DetailProgram"/>
        <TextView
            android:text="봉사시간"/>
        <TextView
            android:id="@+id/textview_time_DetailProgram"/>
        <TextView
            android:text="모집기간"/>
        <TextView
            android:id="@+id/textview_period2_DetailProgram"/>
    </GridLayout>

    <TextView
        android:id="@+id/textview_content_DetailProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="봉사내용"/>

    <GridView
        android:id="@+id/gridview_data2_DetailProgram"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="2">

    </GridView>



</LinearLayout>
